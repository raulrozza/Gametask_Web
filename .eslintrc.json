{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "plugin:prettier/recommended" 
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "prettier/prettier":[
        "error",
        {
            "singleQuote": true,
            "semi": true,
            "trailingComma": "all",
            "arrowParens": "avoid"
        }
      ]
    },
    "plugins": [
        "react",
        "prettier"
    ]
}
