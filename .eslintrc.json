{
  "env": {
      "browser": true,
      "es2020": true
  },
  "extends": [
      "plugin:react/recommended",
      "standard",
      "plugin:prettier/recommended",
      "prettier/react"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 11,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "prettier"
  ],
  "rules": {
    "prettier/prettier":[
      "error",
      {
          "singleQuote": true,
          "semi": true,
          "trailingComma": "all",
          "arrowParens": "avoid"
      }
    ]
  }
}
